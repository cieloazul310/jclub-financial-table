{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "styled-system/*": ["./styled-system/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts",
    "**/*.mdx"
  ],
  "exclude": [
    "node_modules"
  ]
}
