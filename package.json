{
  "name": "jclub-financial-next",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@11.6.1",
  "scripts": {
    "prepare": "git config --local core.hooksPath .githooks",
    "build": "turbo run build",
    "build:app": "turbo run build --filter='./packages/*' --filter='./apps/web'",
    "build:package": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "test": "vitest",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint-staged": "lint-staged",
    "changeset": "changeset",
    "publish-packages": "npm run build:package && changeset version && changeset publish",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@repo/eslint-config": "^0.0.0",
    "@repo/typescript-config": "^0.0.0",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.12"
  },
  "lint-staged": {
    "**/*.{js,cjs,mjs,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --parser typescript --write"
    ]
  }
}